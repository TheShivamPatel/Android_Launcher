<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.featured_widgets.FeaturedWidgetFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_46"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_160"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_10"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/widget_card_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MON"
                android:textSize="@dimen/size_35"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="@dimen/size_50"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wallpaper_widget"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_160"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_25"
            android:layout_weight="1"
            android:background="@drawable/widget_card_bg"
            android:orientation="vertical" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>