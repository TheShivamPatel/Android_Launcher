<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.featured_widgets.FeaturedWidgetFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_24"
        android:layout_marginTop="@dimen/size_60"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/callender_widget"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_160"
            android:layout_marginEnd="@dimen/size_10"
            android:layout_weight="1"
            android:background="@drawable/glassmorphism_off"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MON"
                android:textColor="@color/white"
                android:textSize="@dimen/size_35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="@dimen/size_50" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wallpaper_widget"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_160"
            android:layout_marginStart="@dimen/size_10"
            android:layout_weight="1"
            android:background="@drawable/widget_toggle_on_off"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:src="@drawable/ic_wallpaper" />

            <TextView
                style="@style/headlineMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_12"
                android:text="AUTO"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/screen_time_widget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_160"
        android:layout_marginHorizontal="@dimen/size_24"
        android:layout_marginTop="@dimen/size_20"
        android:layout_weight="1"
        android:background="@drawable/widget_toggle_on_off"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>