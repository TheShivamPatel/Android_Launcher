<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.featured_widgets.FeaturedWidgetFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_46"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/callender_widget"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_160"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_10"
            android:layout_weight="1"
            android:background="@drawable/widget_card_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MON"
                android:textColor="@color/white"
                android:textSize="@dimen/size_35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="@dimen/size_50" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wallpaper_widget"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_160"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_25"
            android:layout_weight="1"
            android:background="@drawable/widget_card_bg"
            android:orientation="vertical" />

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/study_mode_widget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_160"
        android:layout_marginHorizontal="@dimen/size_25"
        android:layout_marginTop="@dimen/size_16"
        android:background="@drawable/widget_card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/on_off_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_25"
            android:fontFamily="@font/montserrat_bold"
            android:text="OFF"
            android:textColor="@color/white"
            android:textSize="@dimen/size_50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/study_mode_more"
            android:layout_width="@dimen/size_52"
            android:layout_height="@dimen/size_52"
            android:layout_marginEnd="@dimen/size_25"
            android:background="@drawable/rounded_bg"
            android:padding="@dimen/size_8"
            android:scaleX="-1"
            android:src="@drawable/icon_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>