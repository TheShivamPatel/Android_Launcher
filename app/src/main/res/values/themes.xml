<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MyLauncher" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.MyLauncher" parent="Base.Theme.MyLauncher" />

    <style name="numbersPicker" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_600</item>
        <item name="background">@drawable/vertical_face_bg</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="primaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_56</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:gravity">center</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="displayLarge" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="headlineLarge" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="headlineMedium" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="bodyLarge" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="bodyMedium" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_56</item>
    </style>

    <style name="labelLarge" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="labelMedium" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>